# Production environment
# IMPORTANT: set real secrets in your deployment platform (Render/Railway/VPS) instead of committing them.

ENVIRONMENT=production

# Database
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DBNAME?sslmode=require

# Auth
JWT_SECRET_KEY=CHANGE_ME_TO_A_LONG_RANDOM_SECRET
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480

# Cookie policy: set to 'none' if frontend/backend are on different sites
COOKIE_SAMESITE=lax

# Signup: keep disabled in production unless you explicitly want open signup
ALLOW_SIGNUP=false

# Default role for self-service signup (if enabled)
SIGNUP_DEFAULT_ROLE=USER

# CORS
FRONTEND_ORIGIN=https://yourdomain.com
